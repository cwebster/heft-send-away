							<li><a href="#">Config option 1</a>
							</li>
							<li><a href="#">Config option 2</a>
							</li>
						</ul>
						<a class="close-link">
							<i class="fa fa-times"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
				<%repertoires.each do |rep|%>
				<%=link_to rep.laboratory_test.analyte_name, edit_repertoire_path(rep.id)%><br>
				<%=rep.laboratory_test.laboratory.laboratory_name%>

				<%end%>
				</div>
			</div>


