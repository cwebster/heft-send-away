			<div class="row">
				<div class="col-md-12 col-sm-12">
					<div class="grid simple ">
						<div class="grid-body no-border">
							<div class="ibox float-e-margins">
								<div class="ibox-title">
									<h5>Laboratories & <span class="semi-bold">Tests</span></h5>
									<div class="ibox-tools">
										<a class="collapse-link">
											<i class="fa fa-chevron-up"></i>
										</a>
										<a class="dropdown-toggle" data-toggle="dropdown" href="#">
											<i class="fa fa-wrench"></i>
										</a>
										<ul class="dropdown-menu dropdown-user">
											<li><a href="#">Config option 1</a>
											</li>
											<li><a href="#">Config option 2</a>
											</li>
										</ul>
										<a class="close-link">
											<i class="fa fa-times"></i>
										</a>
									</div>
								</div>
								<div class="ibox-content">
									<table class="table table-hover no-more-tables">
										<thead>
											<tr>
												<th>Laboratory</th>
												<th>Investigations</th>
											</tr>
										</thead>
										<tbody>

											<% laboratories_arr.each do |managed_laboratory| %>
											<% managed_laboratory.each do |laboratory| %>
											<tr>
												<td><%=laboratory_details(laboratory_id: laboratory)%></td>
												<td>	
													<%LaboratoryTest.where(laboratory_id: laboratory).where(id: repertoires.pluck(:laboratory_test_id)).each do |investigation| %>
													
													  <%=link_to investigation.analyte_name, edit_repertoire_path(repertoires.where(laboratory_test_id:investigation.id).first)%><br>
													<%end%>

												</td>
											</tr>
											<% end %>
											<% end %>
										</tbody>
									</table>


								</div>
							</div>
						</div>
					</div>
				</div>
			</div> 

			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5><span class="semi-bold">Tests</span></h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<i class="fa fa-wrench"></i>
						</a>
