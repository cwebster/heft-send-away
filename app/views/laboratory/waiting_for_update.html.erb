
<table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="example" aria-describedby="DataTables_Table_0_info" role="grid">
  <thead>
    <tr role="row">
      <th></th>
      <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Activate to sort column descending">Laboratory Name </th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Contact Name</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Address</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Telephone</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Email</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Date Request For Information Sent</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Date information last updated</th>
      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Activate to sort column ascending">Number of Days Waiting</th>

    </tr>
  </thead>
  <tbody>
    <% @labs_waiting.each do |laboratory| %>
    <tr class="gradeA" role="row">
      <td>1</td>
      <td class="sorting_1"><%=laboratory.laboratory_name %></td>
      <td class="sorting_1"><%=laboratory.contact_name %></td>
      <td class="sorting_1"><%=laboratory.address1 %>, <%=laboratory.address2 %>, <%=laboratory.postcode %></td>
      <td class="sorting_1"><%=laboratory.telephone %></td>
      <td class="sorting_1"><% unless laboratory.user.nil? %><%=laboratory.user.email %><%end%></td>
      <td class="sorting_1"><%=laboratory.date_request_for_information_sent %></td>
      <td class="sorting_1"><%=laboratory.date_information_updated %></td>
      <td class="sorting_1"><% unless laboratory.date_information_updated.nil? %>
        <%=(laboratory.date_request_for_information_sent.to_date - laboratory.date_information_updated.to_date).to_i %>
        <%end%>
      </td>
    </tr>

    <%end%>
  </tbody>
    <tfoot>
      <tr>
        <th rowspan="1" colspan="1">Laboratory Name</th>
        <th rowspan="1" colspan="1">Contact Name</th>
        <th rowspan="1" colspan="1">Address</th>
        <th rowspan="1" colspan="1">Telephone</th>
        <th rowspan="1" colspan="1">Email</th>
        <th rowspan="1" colspan="1">Date Request For Information Sent</th>
        <th rowspan="1" colspan="1">Date information last updated</th>
        <th rowspan="1" colspan="1">Number of Days Waiting</th>
      </tr>
    </tfoot>
