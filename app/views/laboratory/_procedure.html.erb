<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>Current Status of Send Away Investigations</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li><a href="#">Config option 1</a>
                </li>
                <li><a href="#">Config option 2</a>
                </li>
            </ul>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content inspinia-timeline">

        <div class="timeline-item">
            <div class="row">
                <div class="col-xs-3 date">
                    <i class="fa fa-briefcase"></i>
                    Select an investigation
                    <br>
                    <small><%=dashboard_data["total_tests"]%> already</small>
                </div>
                <div class="col-xs-7 content no-top-border">
                    <p class="m-b-xs"><strong>1st Step</strong></p>

                    <p><%=link_to "Build repertoire for #{laboratory.laboratory_name}", build_repertoire_path(laboratory)%></p>

                </div>
            </div>
        </div>
        <div class="timeline-item">
            <div class="row">
                <div class="col-xs-3 date">
                    <i class="fa fa-phone"></i>
                    <small><%=(dashboard_data["labs_out_of_date"])%> out of date</small>
                </div>
                <div class="col-xs-7 content">
                    <p class="m-b-xs"><strong>Make initial contact with Laboratory</strong></p>
                    <p><%= link_to "Initial letter to update information from referral laboratories", labs_out_of_date_letters_path(current_user)%></p>
                </div>
            </div>
        </div>
        <div class="timeline-item">
            <div class="row">
                <div class="col-xs-3 date">
                    <i class="fa fa-edit"></i>
                    Update information in database
                    <br>
                </div>
                <div class="col-xs-7 content">
                    <p class="m-b-xs"><strong>Edit records</strong></p>
                    <p><%=link_to "View repertoire for #{laboratory.laboratory_name}", repertoire_for_laboratory_path(:laboratory_id => laboratory.id)%>
                    </p>
                </div>
            </div>
        </div>
        <div class="timeline-item">
            <div class="row">
                <div class="col-xs-3 date">
                    <i class="fa fa-phone"></i>
                    <small><%=dashboard_data["information_updated_but_not_complete_for_laboratory"]%> updated but incomplete <br><%=dashboard_data["records_complete"]%> complete</small>
                </div>
                <div class="col-xs-7 content">
                    <p class="m-b-xs"><strong>If record is incomplete</strong></p>
                    <p>
                        <%= link_to "Send letters for updated but not completed", updated_but_not_complete_letters_path(current_user) %>
                    </p>
                </div>
            </div>
        </div>
        <div class="timeline-item">
            <div class="row">
                <div class="col-xs-3 date">
                    <i class="fa fa-phone"></i>
                    
                    <br>
                    <small><%=dashboard_data["waiting_for_updated_information"]%> waiting</small>
                </div>
                <div class="col-xs-7 content">
                    <p class="m-b-xs"><strong>If no information is returned</strong></p>
                    <p>
                        <%= link_to "Send reminder letters", waiting_for_update_letters_path(current_user)%>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>