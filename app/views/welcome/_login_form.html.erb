<%= form_for(:user, :url => session_path(:user)) do |f| %>
<div class="row login-container animated fadeInUp">
    <div class="col-md-7 col-md-offset-2 tiles white no-padding">
      <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
        <h2>
          Sign in
        </h2>
        <form class="animated fadeIn validate" id="" name="" >
          <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
            <div class="col-md-6 col-sm-6">
              <div class="input-group">
				        <span class="input-group-addon primary">
					      <i class="material-icons">face</i>
				        </span>
				        <input autofocus="autofocus" type="email" name="user[email]" id="user_email" class="form-control">
				     </div>
            </div>
            <div class="col-md-6 col-sm-6">
              <div class="input-group">
                <span class="input-group-addon primary">
                <i class="material-icons">vpn_key</i>
                </span>
                <input autofocus="autofocus" type="password" name="user[password]" id="user_password" class="form-control">
             </div>
            </div>
          </div>
          <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
            <div class="control-group col-md-10">
              <div class="checkbox checkbox check-success">
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
              </div>
            </div>
          </div>
        </form>

        <div role="tablist">
          <%= f.submit "Log in", :class => 'btn btn-primary btn-cons' %>
        </div>
      </div>

    </div>
  </div>
<% end %>
