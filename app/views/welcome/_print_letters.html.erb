<div class="tiles purple added-margin">
  <div class="tiles-body">
    <div class="controller"> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
    <div class="tiles-title"> <%= @title %> </div>
    <div class="row-fluid">
      <div class="heading"> Generate Addresses of Labs</div>
      <div class="tiles-title">Generate MailMerge File Addressess (records updated and marked as out)</div>
      <%=form_tag(out_of_date_path([:months]), class: "form-inline") do%>
      <div class="form-group">
        <label for="usr">at least X months out of date:</label>
        <input type="text" class="form-control" id="months_out" name="months_out">
        <button type="submit" class="btn btn-default">Months Old</button>
      </div>
      <% end %>

<div class="heading"> Generate Addresses of Labs Test (Don't Send)</div>
      <%=form_tag(out_of_date_test_path([:months]), class: "form-inline") do%>
      <div class="form-group">
        <label for="usr">at least X months out of date:</label>
        <input type="text" class="form-control" id="months_out" name="months_out">
        <button type="submit" class="btn btn-default">Months Old</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
